# Alpaca API Configuration
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets  # Use https://api.alpaca.markets for live trading

# Alpaca Market Data Configuration
# IEX = Free real-time data (15-minute delayed volume, may have gaps)
# SIP = Premium real-time data (full volume, all exchanges) - requires paid subscription
ALPACA_DATA_FEED=iex  # Options: 'iex' (free) or 'sip' (paid)

# Discord Bot Configuration
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_CHANNEL_ID=your_discord_channel_id_here

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Claude API Configuration (for sentiment analysis)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# News API Configuration (Optional - for real news sentiment)
NEWS_API_KEY=your_newsapi_key_here  # Get free key from https://newsapi.org
NEWS_API_ENABLED=false  # Set to true when you have a key

# Trading Configuration
TRADING_MODE=paper  # paper or live
MAX_POSITION_SIZE=5000  # Maximum position size in USD
MAX_DAILY_LOSS=1000  # Maximum daily loss in USD (circuit breaker)
PROFIT_TARGET_PCT=0.50  # 50% profit target
STOP_LOSS_PCT=0.30  # 30% stop loss
MAX_OPEN_POSITIONS=5  # Maximum number of concurrent positions

# Options Trading Configuration
ENABLE_OPTIONS_TRADING=true  # Enable options trading
ENABLE_STOCK_TRADING=true  # Enable stock trading
OPTIONS_MAX_CONTRACTS=2  # Maximum contracts per options trade
OPTIONS_MAX_PREMIUM=500  # Maximum premium per contract in USD
OPTIONS_MIN_DTE=30  # Minimum days to expiration
OPTIONS_MAX_DTE=45  # Maximum days to expiration
OPTIONS_CLOSE_DTE=7  # Close options when this many days remain
OPTIONS_STRIKE_PREFERENCE=OTM  # ATM, OTM, or ITM
OPTIONS_OTM_STRIKES=1  # Number of strikes away for OTM

# Database Configuration
DATABASE_PATH=./data/trading.db

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/trading.log

# Scheduler Configuration
SCAN_INTERVAL_MINUTES=5  # How often to scan for opportunities

# FastAPI Configuration
API_HOST=0.0.0.0
API_PORT=8000
